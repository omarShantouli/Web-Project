@{
    ViewData["Title"] = "SignUp";
    ViewData["Subtitle"] = "School Portal";
    ViewData["PageOne"] = "Login";
    ViewData["PageTwo"] = "SignUp";
}
@model Student

<div class="text-center">
    <div class="text-danger">
        @ViewBag.fillError
    </div>
     <form asp-controller="Login" asp-action="AddStudent" method="post">

        <label asp-for="Name" >Name</label>

        <br />

        <input class="w-25" asp-for="Name"  type="text" required/>

        <br />

        <label asp-for="Email" >Email</label>

        <br />
        <input class="w-25" asp-for="Email" type="email" required />

        <br />

        <label asp-for="Password" >Password</label>

        <br />
        <input class="w-25" asp-for="Password" type="password" required />
        <br />


        <div class="mt-3">
             <label asp-for="SectionId">Section</label>
            <select id="select1" asp-for="SectionId">
                @for(int i = 0; i < ViewBag.sections.Count; i++)
                {
                    <option value=@ViewBag.sections[i].Id>@ViewBag.sections[i].Name</option>
                }
            </select>
        </div>


        <br />

        <button class="w-25  btn btn-primary" type="submit"> SignUp </button>
     
     </form>

</div>